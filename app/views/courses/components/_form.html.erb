<%= form_for @course do |f| %>
  <%= f.label :title %>
  <br />
  <%= f.text_field :title %>
  
  <br />
  <br />

  <%= f.label :category %>
  <br />
  <%= f.text_field :category %>

  <br />
  <br />

  <%= f.fields_for :lectures do |lecture_field| %>

  <h4>Add a lecture</h4>

    <%= lecture_field.label :title %>
    <br />
    <%= lecture_field.text_field :title %>

    <br />
    <br />

    <%= lecture_field.label :category %>
    <br />
    <%= lecture_field.text_field :category %>

    <br />
    <br />

    <%= lecture_field.label :summary %>
    <br />
    <%= lecture_field.text_area :summary %>

    <br />
    <br />

    <%= lecture_field.label :position %>
    <br />
    <%= lecture_field.text_field :position %>

    <br />
    <br />

    <%= lecture_field.hidden_field :course_id, value: @course.id %>
  <% end %>

  <br />
  <br />

  <%= f.submit %> 
<% end %>